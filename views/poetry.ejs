      </script>
      <!-- End Google Analytics -->
   </head>
   <body class="is-preload">
      <!-- Wrapper -->
      <div id="wrapper">
         <!-- Main -->
         <div id="main">
            <div class="inner">
               <!-- Section -->
               <section>
                  <header class="major">
                     <h2>Poetry</h2>
                  </header>
                  <p style="font-size:18px">The world of poems is enchanting. Be it rhymes, free verses, or octets, the world of poetry welcomes each poet so letâ€™s step in!</p>
                  <div class="posts">
                     <% for(var i=poems.length-1;i>=0;i--){ %>
                     <article class="box" style="background-color: #F5F6F7;">
                        <h2 style="font-family: cursive;"><%=poems[i].attributes.title%></h2>
                        <%if(poems[i].attributes.author.data){%>
                        <h5>By <%=poems[i].attributes.author.data.attributes.name%></h5>
                        <%}%>
                        <p><%-poems[i].attributes.preview_text-%>...</p>
                        <%if(poems[i].attributes.category!=null){%>
                        <strong>
                           <p style="font-style: italic;">Category: <%=poems[i].attributes.category%></p>
                        </strong>
                        <br />
                        <%}%>
                        <%if(poems[i].attributes.tags){%>
                        <h5>tags: <%=poems[i].attributes.tags%></h5>
                        <br />
                        <%}%>
                        <ul class="actions">
                           <li><a href="/poems/<%=poems[i].attributes.title.replace(/\s+/g, '-').replace(/\?/g, '.').toLowerCase()%>/<%=poems[i].id%>" class="button">Read</a></li>
                        </ul>
                     </article>
                     <%}%>
                  </div>
               </section>
            </div>
         </div>
         <%-include("partials/side-menu-small")%>
      </div>
      <!-- Scripts -->
      <script src="/assets/js/jquery.min.js"></script>
      <script src="/assets/js/browser.min.js"></script>
      <script src="/assets/js/breakpoints.min.js"></script>
      <script src="/assets/js/util.js"></script>
      <script src="/assets/js/main.js"></script>
   </body>
</html>